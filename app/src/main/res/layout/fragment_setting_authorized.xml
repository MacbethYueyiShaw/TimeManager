<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.AuthorizedFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/myself"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:rowCount="3">

                    <com.example.timemanager.compoents.CircleImageView
                        android:id="@+id/imageView1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/avatar2" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:visibility="visible"
                        app:layout_gravity="fill"
                        app:layout_rowWeight="4">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="月一"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <TextView
                            android:id="@+id/normal_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="我要成为时间管理大师！" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/profile_entry"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_weight="1"
                        android:text="个人主页"
                        app:layout_rowWeight="4" />
                </androidx.gridlayout.widget.GridLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/friend_button"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="好友列表"
                        app:layout_column="0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_gravity="center"
                        app:layout_row="0" />

                    <Button
                        android:id="@+id/login_button"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="切换账户"
                        android:textColor="#FFFFFF"
                        app:layout_column="0"
                        app:layout_gravity="center"
                        app:layout_row="2" />

                    <Button
                        android:id="@+id/history_entry"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="@string/logout"
                        android:textColor="#FFFFFF"
                        app:layout_column="0"
                        app:layout_gravity="center"
                        app:layout_row="1" />

                    <Button
                        android:id="@+id/set_theme_btn"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="主题商店"
                        app:layout_column="0"
                        app:layout_gravity="center"
                        app:layout_row="3" />

                </androidx.gridlayout.widget.GridLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        >
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>